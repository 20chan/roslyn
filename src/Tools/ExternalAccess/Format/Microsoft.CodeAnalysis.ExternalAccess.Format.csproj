<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <RootNamespace>Microsoft.CodeAnalysis.ExternalAccess.Format</RootNamespace>
    <TargetFramework>netcoreapp2.1</TargetFramework>

    <!-- NuGet -->
    <IsPackable>true</IsPackable>
    <PackageId>Microsoft.CodeAnalysis.ExternalAccess.Format</PackageId>
    <PackageDescription>
      A supporting package for dotnet format:
      https://github.com/dotnet/format
    </PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\..\EditorFeatures\Core.Wpf\Options\LegacyEditorConfigDocumentOptionsProvider.cs" Link="Options\LegacyEditorConfigDocumentOptionsProvider.cs" />
    <Compile Include="..\..\..\EditorFeatures\Core.Wpf\Options\LegacyEditorConfigDocumentOptionsProvider.DocumentOptions.cs" Link="Options\LegacyEditorConfigDocumentOptionsProvider.DocumentOptions.cs" />
    <Compile Include="..\..\..\EditorFeatures\Core.Wpf\Options\LegacyEditorConfigDocumentOptionsProvider.EmptyCodingConventionContext.cs" Link="Options\LegacyEditorConfigDocumentOptionsProvider.EmptyCodingConventionContext.cs" />
    <Compile Include="..\..\..\EditorFeatures\Core.Wpf\Options\LegacyEditorConfigDocumentOptionsProviderFactory.cs" Link="Options\LegacyEditorConfigDocumentOptionsProviderFactory.cs" />
  </ItemGroup>

  <ItemGroup>
    <!--
      ⚠ ONLY dotnet format ASSEMBLIES MAY BE ADDED HERE ⚠
    -->
    <InternalsVisibleTo Include="dotnet-format" Key="$(FormatKey)" />
    <InternalsVisibleTo Include="dotnet-format.UnitTests" Key="$(FormatKey)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.CodingConventions" Version="$(MicrosoftVisualStudioCodingConventionsVersion)" />

    <ProjectReference Include="..\..\..\Features\Core\Portable\Microsoft.CodeAnalysis.Features.csproj" />
    <ProjectReference Include="..\..\..\Features\CSharp\Portable\Microsoft.CodeAnalysis.CSharp.Features.csproj" />
    <ProjectReference Include="..\..\..\Features\VisualBasic\Portable\Microsoft.CodeAnalysis.VisualBasic.Features.vbproj" />
  </ItemGroup>

  <ItemGroup>
    <PublicAPI Include="PublicAPI.Shipped.txt" />
    <PublicAPI Include="PublicAPI.Unshipped.txt" />
  </ItemGroup>

</Project>